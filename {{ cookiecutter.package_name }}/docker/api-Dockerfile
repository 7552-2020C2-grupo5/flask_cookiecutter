FROM python:3.7.7-stretch
RUN apt-get update && apt-get install -y postgresql-client
RUN pip install poetry
RUN poetry install
RUN pip install gunicorn
CMD docker/wait-for-postgres.sh && python {{cookiecutter.package_name}}/manage.py db_create && python {{cookiecutter.package_name}}/manage.py db upgrade && gunicorn -w 2 --bind 0.0.0.0:5000 "{{cookiecutter.package_name}}.api.app:create_app()"
